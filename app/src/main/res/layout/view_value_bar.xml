<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/value_bar_margin_end"
        android:layout_marginStart="@dimen/value_bar_margin_start"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/valueBarValue"
            android:layout_width="@dimen/value_bar_value_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/value_bar_margin_value"
            android:gravity="end"
            android:textSize="@dimen/value_bar_value_text_size"
            tools:text="-100"/>

        <SeekBar
            android:id="@+id/valueBarBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/seek_bar"/>

    </LinearLayout>
</RelativeLayout>
