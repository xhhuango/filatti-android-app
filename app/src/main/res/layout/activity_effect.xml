<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_effect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/header_margin_end"
        android:layout_marginStart="@dimen/header_margin_start"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/noButton"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="@dimen/header_icon_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/no"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/okButton"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="@dimen/header_icon_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ok"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/effectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/noButton"
            android:layout_toStartOf="@id/okButton"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/header"
        android:layout_below="@+id/header_effect"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/header_margin_end"
        android:layout_marginStart="@dimen/header_margin_start"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="@dimen/header_icon_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/back"
            tools:ignore="ContentDescription"/>

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="@dimen/header_icon_width"
            android:layout_height="@dimen/header_icon_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/next"
            tools:ignore="ContentDescription"/>

        <LinearLayout
            android:id="@+id/effectTitleBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/backButton"
            android:layout_toStartOf="@id/nextButton"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageButton
                android:id="@+id/filterButton"
                android:layout_width="@dimen/header_icon_width"
                android:layout_height="@dimen/header_icon_height"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/filter"
                tools:ignore="ContentDescription"/>

            <ImageButton
                android:id="@+id/adjustButton"
                android:layout_width="@dimen/header_icon_width"
                android:layout_height="@dimen/header_icon_height"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/adjust"
                tools:ignore="ContentDescription"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            tools:ignore="ContentDescription"/>

        <FrameLayout
            android:id="@+id/effectContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>